<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".fragments.VistaCarta">

    <!-- Desayuno Section -->
    <TextView
        android:id="@+id/tvBreakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desayuno"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ListView
        android:id="@+id/lvBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

    <!-- Almuerzo Section -->
    <TextView
        android:id="@+id/tvLunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almuerzo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ListView
        android:id="@+id/lvLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

    <!-- Cena Section -->
    <TextView
        android:id="@+id/tvDinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ListView
        android:id="@+id/lvDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

    <!-- Extras Section -->
    <TextView
        android:id="@+id/tvExtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extras"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ListView
        android:id="@+id/lvExtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

</LinearLayout>
