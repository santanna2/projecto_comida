<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#CAB1AF"
    tools:context=".activitys.SeguimientoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguimiento de Pedido"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="20dp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Fragmento de Google Maps -->
        <LinearLayout
            android:id="@+id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/maps"
            android:orientation="horizontal" />

        <!-- InformaciÃ³n de rastreo -->
        <TextView
            android:id="@+id/tvIdPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID de Pedido: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/tvEstadoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:textColor="@color/black"

            android:textSize="18sp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/tvDetallePedido"
            android:layout_width="match_parent"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            android:text="Detalles: "
            android:textSize="18sp"
            android:paddingTop="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
